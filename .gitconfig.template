[core]
  editor = nvim
[merge]
  tool = diffconflicts
[mergetool "diffconflicts"]
  cmd = nvim -c DiffConflicts "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
  trustExitCode = true
[mergetool]
  keepBackup = false
[alias]
  co = checkout
  br = branch
  st = status
  ls = log --graph --oneline --all
